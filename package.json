{
  "name": "villus-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "docs:dev": "cd ./docs && npm run dev && cd -",
    "docs:build": "cd ./docs && npm run build && cd -",
    "docs:deploy": "./scripts/deploy-docs.sh",
    "test": "jest",
    "test:ci": "jest --ci --detectOpenHandles --runInBand",
    "cover": "jest --coverage",
    "cover:ci": "jest --coverage --ci --runInBand --detectOpenHandles",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "build": "node scripts/build.js",
    "postversion": "npm run build",
    "format": "prettier ./packages/**/*.ts --write"
  },
  "author": "Abdelrahman Awad <logaretm1@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@graphql-typed-document-node/core": "^3.1.0",
    "@types/graphql": "^14.5.0",
    "@types/graphql-upload": "^8.0.4",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "babel-jest": "^26.6.3",
    "bundlesize": "^0.18.0",
    "chalk": "^4.1.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "fast-json-stable-stringify": "^2.1.0",
    "filesize": "^6.1.0",
    "flush-promises": "^1.0.2",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.11.0",
    "graphql-tools": "^7.0.2",
    "graphql-upload": "^11.0.0",
    "gzip-size": "^6.0.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "mkdirp": "^1.0.4",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.0",
    "rollup": "^2.39.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-dts": "^2.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "terser": "^5.6.0",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5",
    "vue": "^3.0.0",
    "vue-jest": "^3.0.7"
  },
  "bundlesize": [
    {
      "path": "./dist/*.min.js",
      "maxSize": "10 kB"
    }
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "vue-demi": "^0.7.0"
  }
}
